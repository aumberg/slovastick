<?xml version="1.0" encoding='UTF-8'?>
<vk s-title="the vkontakte social network" s-go="http://vk.com" s-go-route=".*" s-move="right">
	<!-- autoriation. OMG! there maybe CAPTCHA -->
	<email 	s-shortcut="email"></email>
	<pass 	s-shortcut="pass"></pass>
	<enter 	s-see="//e/enter" s-click></enter>
	<!-- main page -->
	<main 	s-see="//*[@id='myprofile']" s-click></main>
	<!-- music -->
	<music 	s-see="//*[@id='side_bar']/ol/li[5]/a" s-click>
		<my s-see="//*[@id='album0']" s-click>
			<song s-see="//*[@id='audios_list']/descendant::*[contains(@class, 'info fl_l')]" s-see-position="1">
				<play s-see-context=".." s-see="ancestor::*[2]/*[@onclick][1]" s-click></play>
			</song>
		</my>
		<pop s-see="//*[@id='top_audios']/div" s-click>
			<search s-see="//*[@id='s_search']" s-title="search music"></search>
			<ele 	s-see="preceding-sibling::*[1]" s-click s-null></ele>
			<song 	s-see="//*[@id='audios_list']/descendant::*[contains(@class, 'audio  fl_l')]" s-see-position="1">
				<play s-see-context=".." s-see="*[@onclick][1]" s-title="play song" s-click></play>
				<add s-title="add to My music">
					<ok s-see-context="../.." s-see="//*[@class='actions']/*[@onclick]" s-click></ok>
				</add>
			</song>
		</pop>
	</music>
</vk>